<Window x:Class="ForecastClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForecastClient"
        mc:Ignorable="d"
        Title="ForecastClient" Height="450" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/Background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBox Name="location_textBox" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="15" Foreground="White" VerticalAlignment="Top" Background="Transparent" Opacity="0.5" Width="362" Margin="0,172,0,0" Height="27"/>
        <Button Content="Current" HorizontalAlignment="Center" Margin="0,214,0,0" VerticalAlignment="Top" Height="34" Width="208" Foreground="White" Background="DarkSlateBlue" BorderBrush="DarkSlateBlue" Click="CurrentButton_Click"/>
        <Button Content="Forecast" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" Height="34" Width="208" Foreground="White" Background="DarkSlateBlue" BorderBrush="DarkSlateBlue" Click="ForecastButton_Click"/>
    </Grid>
</Window>
